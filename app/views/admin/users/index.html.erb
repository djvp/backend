<h1>Listing users</h1>

<% if notice %>
    <div class="alert alert-info"><%= notice %></div>
<% end %>

<table class="table table-bordered">
  <tr>
    <th>Username</th>
    <th>Password digest</th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password_digest %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_admin_user_path, :class => 'btn btn-primary' %>
